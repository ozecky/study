<% url = Study::Application.routes.url_helpers %>
class Study5Controller
  remoteLink: ->
    $('.remote-link').on 'ajax:success', (e)->
      $('#result').html(e.detail[0].toString())
      return
    $('.ajax-format-html-link').on 'click', ()->
      $.ajax
        cache: true
        url:  "<%= url.edit_study_item_path(id: '1', format: :html) %>"
        type: 'get'
        success: (data, status, xhr) ->
          $('#result').html(data)
      false

    $('.ajax-format-json-link').on 'click', ()->
      $.ajax
        cache: true
        url:  "<%= url.edit_study_item_path(id: '1', format: :json) %>"
        type: 'get'
        success: (data, status, xhr) ->
          $('#result').html(JSON.stringify(data))
      false

    $('.ajax-format-js-link').on 'click', ()->
      $.ajax
        cache: true
        url:  "<%= url.edit_study_item_path(id: '1', format: :js) %>"
        type: 'get'
        success: (data, status, xhr) ->
          $('#result').html(data)
      false

    $('.ajax-format-csv-link').on 'click', ()->
      $.ajax
        cache: true
        url:  "<%= url.edit_study_item_path(id: '1', format: :csv) %>"
        type: 'get'
        success: (data, status, xhr) ->
          $('#result').html(data)
      false

    $('.ajax-data-html-link').on 'click', ()->
      $.ajax
        cache: true
        dataType: 'html'
        url:  "<%= url.edit_study_item_path(id: '1') %>"
        type: 'get'
        success: (data, status, xhr) ->
          $('#result').html(data)
      false

    $('.ajax-data-json-link').on 'click', ()->
      $.ajax
        cache: true
        dataType: 'json'
        url:  "<%= url.edit_study_item_path(id: '1') %>"
        type: 'get'
        success: (data, status, xhr) ->
          $('#result').html(JSON.stringify(data))
      false

    $('.ajax-data-script-link').on 'click', ()->
      $.ajax
        cache: true
        dataType: 'script'
        url:  "<%= url.edit_study_item_path(id: '1') %>"
        type: 'get'
        success: (data, status, xhr) ->
          $('#result').html(data)
      false

    $('.ajax-data-text-link').on 'click', ()->
      $.ajax
        cache: true
        dataType: 'text'
        url:  "<%= url.edit_study_item_path(id: '1') %>"
        type: 'get'
        success: (data, status, xhr) ->
          $('#result').html(data)
      false

    $('.ajax-format-html-data-json-link').on 'click', ()->
      $.ajax
        cache: true
        dataType: 'json'
        url:  "<%= url.edit_study_item_path(id: '1', format: :html) %>"
        type: 'get'
        success: (data, status, xhr) ->
          $('#result').html(data)
        error: (data) ->
          $('#error').html(JSON.stringify(data.responseText))
      false

    $('.ajax-format-json-data-html-link').on 'click', ()->
      $.ajax
        cache: true
        dataType: 'html'
        url:  "<%= url.edit_study_item_path(id: '1', format: :json) %>"
        type: 'get'
        success: (data, status, xhr) ->
          $('#result').html(data)
        error: (data) ->
          $('#error').html(JSON.stringify(data.responseText))
      false

this.Study.study_5 = new Study5Controller